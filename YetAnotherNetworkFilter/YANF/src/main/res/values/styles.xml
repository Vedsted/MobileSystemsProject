<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- https://stackoverflow.com/questions/12706874/how-to-change-textcolor-of-switch-in-android -->
    <style name="SwitchTextAppearanceOn" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">#ff0000</item>
    </style>
    <style name="SwitchTextAppearanceOff" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
